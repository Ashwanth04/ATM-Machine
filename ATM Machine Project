#include<stdio.h>
void main()
{
    int a,b=100000,cr,am,de,pin=2345,br,cp,ot;
     printf("\n Enter the Pin:");
     scanf("%d",&pin);
    if(pin==2345)
        {
           printf("The Pin is Valid");
           printf("To Check Balance--> Press 1");
           printf("\nTo Credit Cash--> Press 2");
           printf("\nTo widthdrawal Cash-->Press 3");
           printf("\nTo Change Pin-->Press 4");
           printf("\n Exit-->Press 5");
           printf("\nEnter the Number:");
           scanf("%d",&a);
        
        if(a==1)
        {
            printf("The balance is:%d",b);
        }
        else if(a==2)
        {
           printf("Enter the Amount:");
            scanf("%d",&am);
            cr=b+am;
            printf("The amount is Credited:%d",cr);
        }
        else if(a==3)
        {  
            printf("enter the amount:");
            scanf("%d",&de);
            br=b-de;
            printf("The amount is withdrawal:%d",br);
        }
        else if(am>b)
        {
            printf("You don't have sufficient Balance");
        }
        else if(a==4){
            printf("Enter the OTP:");
            scanf("%d",&ot);
            printf("Enter the Pin to Change:");
            scanf("%d",&cp);
            printf("The pin is changed");
        }
        else if(a==5)
        {
            printf("The transaction is Cancelled\nThank You for Using ATM\n Have a Nice Day");
        }
        else{
            printf("Invalid choice");
        }
      } 
   else
        {
            printf("The pin is incorrect");
        
        }
        
        
    
}
    
